@{
  Layout = "_Layout";
}

@using BakeryTracker.Models;
<h1>@Model["vendor"].Name</h1>
<h3>@Model["vendor"].Description</h3>
<h3>Orders</h3>
<ol>
@foreach(Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Date</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Home</a></p>